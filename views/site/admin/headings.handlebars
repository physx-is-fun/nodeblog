<section class="section single-wrapper">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-12">
				
				<div class="row" data-aos="fade-down">
					<div class="col-md-4 offset-md-4 text-center">
						<div class="section-header text-center">
							<h2 class="title">Admin headings</h2>
						</div>
					</div>
				</div>
				
				<div class="row">
					<div class="col-md-12">
						{{> messages}}
						<input type="hidden" name="_csrf" value="{{csrfToken}}">
					</div>
				</div>
				
				<div class="row" data-aos="fade-down">
					<div class="col-lg-12">
						<div class="row justify-content-center">
							<div class="col-sm-12 col-md-12 col-lg-6">
								<form action ="/admin/headings" method="GET" onsubmit="requestHandler()">
									<div class="input-group mb-3">
										<input class="form-control" type="text" name="search_query" placeholder="Search by name" required="required" data-validation-required-message="Please enter the heading." value="{{query.search_query}}">
										<div class="input-group-append">
											<button class="btn btn-primary" type="submit">
												<i class="fa fa-search"></i>
											</button>
										</div>
									</div>
								</form>
							</div>
							<div class="col-sm-12 col-md-12 col-lg-6">
								<form action ="/headings" method="POST" onsubmit="requestHandler()">
									<div class="input-group mb-3">
										<input class="form-control" type="text" name="name" placeholder="Create heading" required="required" data-validation-required-message="Please enter the heading.">
										<div class="input-group-append">
											<button class="btn btn-primary" type="submit">
												<i class="fa fa-plus-square"></i>
											</button>
										</div>
									</div>
									<input type="hidden" name="path" value="admin">
								</form>
							</div>
							<div class="col-lg-12">
								<table class="table">
									<thead>
										<tr>
											<th style="width: 10%">AUTHOR</th>
											<th style="width: 10%">CREATEDAT</th>
											<th style="width: 70%">NAME</th>
											<th style="width: 10%">METHODS</th>
										</tr>
									</thead>
									<tbody>
										{{#each headings2}}
										<tr>
											<td>
												{{author.username}}
											</td>
											<td>
												{{generateDate createdAt 'YYYY MMM DD'}}
											</td>
											<td>
												<input class="form-control" type="text" name="name" placeholder="Enter heading" required="required" data-validation-required-message="Please enter the heading." value="{{name}}" id="{{id}}">
											</td>
											<td>
												<div class="btn-group">
													<button class="btn btn-primary" onclick="updateHeading('{{id}}')">
														<i class="fa fa-refresh"></i>
													</button>
													<button class="btn btn-primary" onclick="deleteHeading('{{id}}')">
														<i class="fa fa-trash"></i>
													</button>
												</div>
											</td>
										</tr>
										{{/each}}
									</tbody>
								</table>
							</div>
							</div>
						</div>
					</div>				
				</div>
				
				{{# if headings2.length }}

					{{> pagination}}

				{{/if}}
				
			</div>
		</div>
	</div>
</section>