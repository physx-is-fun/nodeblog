<section class="section single-wrapper">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-12">
			
				<div class="row" data-aos="fade-down">
					<div class="col-md-4 offset-md-4 text-center">
						<div class="section-header text-center">
							<h2 class="title">My posts</h2>
						</div>
					</div>
				</div>
				
				<div class="row">
					<div class="col-md-12">
						{{> messages}}
						<input type="hidden" name="_csrf" value="{{csrfToken}}">
					</div>
				</div>
				
				<div class="row" data-aos="fade-down">
					<div class="col-lg-12">
						<div class="row justify-content-center">
							<div class="col-sm-12 col-md-12 col-lg-12">
								<form action ="/account/posts" method="GET" onsubmit="requestHandler()">
									<div class="input-group mb-3">
										<input class="form-control" type="text" name="search_query" placeholder="Search by title" required="required" data-validation-required-message="Please enter the category." value="{{query.search_query}}">
										<div class="input-group-append">
											<button class="btn btn-primary" type="submit">
												<i class="fa fa-search"></i>
											</button>
										</div>
									</div>
									<input type="hidden" name="path" value="account">
								</form>
							</div>
							<div class="col-sm-12 col-md-12 col-lg-12">
								<table class="table">
									<thead>
										<tr>
											<th style="width: 10%">CREATEDAT</th>
											<!--
											<th style="width: 50%">TITLE</th>
											<th style="width: 30%">CATEGORY</th>
											-->
											<th style="width: 80%">TITLE</th>
											<th style="width: 10%">METHODS</th>
										</tr>
									</thead>
									<tbody>
										{{# if posts.length }}
											{{#each posts}}
											<tr>
												<td>{{generateDate createdAt 'YYYY MMM DD'}}</td>
												<td>{{title}}</td>
												<!--
												<td>{{category.name}}</td>
												-->
												<td>
													<div class="btn-group">
														<a class="btn btn-primary" href="/posts/update/{{id}}">
															<i class="fa fa-edit"></i>
														</a>
														<button class="btn btn-primary" onclick="deletePost('{{id}}')">
															<i class="fa fa-trash"></i>
														</button>
													</div>
												</td>
											</tr>
											{{/each}}
										{{/if}}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
				
				{{# if posts.length }}
			
					{{> pagination}}
			
				{{/if}}
			</div>	
		</div>
	</div>
</section>