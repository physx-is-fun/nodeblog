<section class="section single-wrapper">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-12">
		<div class="row" data-aos="fade-down">
			<div class="col-md-4 offset-md-4 text-center">
				<div class="section-header text-center">
					<h2 class="title">Forgot password</h2>
				</div>
			</div>
		</div>
		
		<div class="row">
			<div class="wide-form col-md-8">
				{{> messages}}
				<input type="hidden" name="_csrf" value="{{csrfToken}}">
			</div>
		</div>
		
		<div class="row" data-aos="fade-down">
			<div class="narrow-form">
				<form method="POST" action="/forgotpassword" onsubmit="requestHandler()">
					<div class="form-group text-left">
						<div>Forgot your profile’s password?</div>
						<div>Enter your email address and we’ll send you a recovery link.</div>
					</div>
					<div class="form-group">
						<div class="input-group">                
							<div class="input-group-prepend">
								<span class="input-group-text">
									<span class="fa fa-envelope"></span>
								</span>                    
							</div>
							<input autocomplete class="form-control" id="email" name="email" type="email" placeholder="Email *" required="required" data-validation-required-message="Please enter your email.">
						</div>
					</div>
				  <div class="form-group text-left">
					<input type="checkbox" required="required"> 
					I accept the <a href="#">terms of conditions</a>, the <a href="#">privacy policy</a> and the <a href="#">cookie policy</a>. 
				  </div>
				  <div class="form-group text-left">
					<div class="btn-group">
						<button type="submit" class="btn btn-success submit">
						  Submit
						</button>
					</div>
				  </div>
				</form>
			</div>
		</div>
      </div>
    </div>
  </div>
</section>