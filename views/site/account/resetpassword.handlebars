<section class="section single-wrapper">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-12">
		<div class="row" data-aos="fade-down">
			<div class="col-md-4 offset-md-4 text-center">
				<div class="section-header text-center">
					<h2 class="title">Reset password</h2>
				</div>
			</div>
		</div>
		
		<div class="row">
			<div class="wide-form col-md-8">
				{{> messages}}
				<input type="hidden" name="_csrf" value="{{csrfToken}}">
			</div>
		</div>
		
		<div class="row" data-aos="fade-down">
			<div class="narrow-form">
				<form method="POST" onsubmit="requestHandler()">
					<div class="form-group">
					<div class="input-group">                
						<span class="input-group-addon" id="basic-addon1"><span class="fa fa-lock"></span></span> 
						<input autocomplete class="form-control" id="password" name="password" type="password" placeholder="New password *" required="required" data-validation-required-message="Please enter your new password." pattern="(?=.*?[0-9])(?=.*[a-z])(?=.*[A-Z])(?=.*?[#?!@$%^&*-]).{5,25}" title="Must contain at least 1 number, one upper case letter, 1 lower case letter, 1 special character, and must between 5-25 characters"  onChange="onChangePassword()">
					</div>
				  </div>
				  <div class="form-group">
						<div class="input-group">
							<span class="input-group-addon" id="basic-addon1"><span class="fa fa-lock"></span></span>
							<input autocomplete class="form-control" id="confirmPassword" name="confirmPassword" type="password" placeholder="New password again *" required="required" data-validation-required-message="Please reenter your password." onChange="onChangePassword()">
						</div>
				  </div>
				  <div class="form-group text-left">
					<input type="checkbox" required="required"> 
					I accept the <a href="#">terms of conditions</a>, the <a href="#">privacy policy</a> and the <a href="#">cookie policy</a>. 
				  </div>
				  <div class="form-group text-left">
					<div class="btn-group">
						<button type="submit" class="btn btn-success submit">
						  Submit
						</button>
					</div>
				  </div>
				</form>
			</div>
		</div>
      </div>
    </div>
  </div>
</section>