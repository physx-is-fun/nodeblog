<section class="section single-wrapper">
	<div class="container">
		{{> messages}}
		<input type="hidden" name="_csrf" value="{{csrfToken}}">
		<div class="row">
			<div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
				<div class="page-wrapper">
					
					<div class="blog-top clearfix" data-aos="fade-right">
						<h4 class="pull-left">Search post</h4>
					</div><!-- end blog-top -->
					<div class="blog-list clearfix">
						
						<form action ="/posts" method="GET" onsubmit="requestHandler()" data-aos="fade-right">
							<div class="form-group">
								<div class="input-group">
									<input class="form-control" name="search_query" id="title" type="text" placeholder="Search post by title" value="{{query.search_query}}">
								</div>
							</div>
							<div class="form-group">
								<select class="form-control" name="category" id="category">
									{{# if categories.length }}
										<option disabled value selected>Please select a category.</option>
										{{# each categories }}
											<option value="{{id}}">{{name}}</option>
										{{/each}}
									{{/if}}
								</select>
							</div>
							<div class="form-group">
								<select class="form-control" name="heading" id=2heading">
									{{# if headings.length }}
										<option disabled value selected>Please select a heading.</option>
										{{# each headings }}
											<option value="{{id}}">{{name}}</option>
										{{/each}}
									{{/if}}
								</select>
							</div>
							<div class="form-group text-left">
							<div class="btn-group">
								<button class="btn btn-primary" type="submit">
									<i class="fa fa-search"></i>
								</button>
							</div>
							</div>
						</form>
						
					</div><!-- end blog-list -->
					
					<hr class="invis">
					
					<div class="blog-top clearfix" data-aos="fade-right">
						<h4 class="pull-left">Posts</h4>
					</div><!-- end blog-top -->
					<div class="blog-list clearfix">
						
						{{# if posts.length }}
						
							{{#each posts}}
							
								<div class="blog-box row" data-aos="fade-right">
									<div class="col-md-4">
										<div class="post-media">
											<a href="#" title="">
												<img src="{{post_image}}" alt="" class="img-fluid">
												<div class="hovereffect"></div>
											</a>
										</div><!-- end media -->
									</div><!-- end col -->

									<div class="blog-meta big-meta col-md-8">
										<h4><a style="color: #111111;" href="/posts/{{_id}}" title="">{{title}}</a></h4>
										<p>{{truncate intro 50}}</p>
										<small class="firstsmall"><a class="bg-orange" href="#" title="">{{category.name}}</a></small>
										<small class="firstsmall"><a class="bg-blue" href="#" title="">{{heading.name}}</a></small>
										<small><a href="#" title="">{{generateDate createdAt 'YYYY MMM DD'}}</a></small>
										<small><a href="#" title="">by {{author.username}}</a></small>
										<small><a href="#" title=""><i class="fa fa-eye"></i> 1114</a></small>
									</div><!-- end meta -->
								</div><!-- end blog-box -->
								
								<hr class="invis">
								
							{{/each}}	
							
						{{/if}}
						
					</div><!-- end blog-list -->
					
					<hr class="invis">
					
					{{# if posts.length }}
					
						{{> pagination}}
						
					{{/if}}	
					
					<hr class="invis">
					
					<div class="row" data-aos="fade-up">
						<div class="col-lg-12">
							<div class="banner-spot clearfix">
								<div class="banner-img">
									<img src="/upload/banner_01.jpg" alt="" class="img-fluid">
								</div><!-- end banner-img -->
							</div><!-- end banner -->
						</div><!-- end col -->
					</div><!-- end row -->

					<hr class="invis">
					
				</div><!-- end page-wrapper -->
				
			</div><!-- end col -->
			
				{{> sidebar}}

		</div><!-- end row -->
	</div><!-- end container -->
</section>

<!-- Footer -->

{{> footer}}